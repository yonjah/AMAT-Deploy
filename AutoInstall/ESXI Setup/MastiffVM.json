{
  "builders": [{
    "name": "mastiff",
    "vm_name": "mastiff",
    "type": "vmware-iso",
    "guest_os_type": "ubuntu-64",

    "tools_upload_path": "/vmfs/volumes/5a52b220-262fa371-1806-90e2ba4d3224/packages/6.5.0/vmtools/linux.iso",
    "vnc_disable_password": true,
    "headless": false,
    "disk_size": "21440",
