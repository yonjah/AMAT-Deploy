    "iso_checksum": "0a03608988cfd2e50567990dc8be96fb3c501e198e2e6efcb846d89efc7b89f2",
    "iso_checksum_type": "sha256",

    "ssh_username": "mastiff",
    "ssh_password": "mastiff",
    "ssh_timeout": "15m",
   
    "disk_type_id": "thin",

    "floppy_files": [
      "preseed/mastiff.cfg"
    ],

    "boot_command": [
      "<enter><wait><f6><esc><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
      "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
      "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
      "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
      "/install/vmlinuz noapic ",
      "preseed/file=/floppy/mastiff.cfg ",
      "debian-installer=en_US auto locale=en_US kbd-chooser/method=us ",
      "hostname={{ .Name }} ",
      "fb=false debconf/frontend=noninteractive ",
      "keyboard-configuration/modelcode=SKIP keyboard-configuration/layout=USA ",
      "keyboard-configuration/variant=USA console-setup/ask_detect=false ",
      "grub-installer/bootdev=/dev/sda ",
      "initrd=/install/initrd.gz -- <enter>"
    ],

    "shutdown_command": "echo 'shutdown -P now' > shutdown.sh; echo 'mastiff'|sudo -S sh 'shutdown.sh'",

    "remote_type": "esx6.5",
    "remote_host": "{{user `esxi_host`}}",
    "remote_datastore": "{{user `esxi_datastore`}}",
    "remote_username": "{{user `esxi_username`}}",
    "remote_password": "{{user `esxi_password`}}",
    "keep_registered": true,

    "vmx_data": {
    "ethernet0.networkName": "VM Network",
    "memsize": "8196",
    "numvcpus": "8"
    }
  }],

  "provisioners": [
   {
     "type": "file",
     "source": "scripts/Network.conf",
     "destination": "/tmp/"
     },
    {
      "type": "shell",
      "scripts": [
        "scripts/open-vm-tools.sh", "scripts/Mastiff_Install.sh"
      ],

      "execute_command": "echo 'mastiff' | {{ .Vars }} sudo -E -S bash '{{ .Path }}'"
    }
  ]
}
